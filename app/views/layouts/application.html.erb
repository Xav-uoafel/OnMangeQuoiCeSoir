<!DOCTYPE html>
<html>
  <head>
    <title>OnMangeQuoiCeSoir</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <%= link_to "OnMangeQuoiCesoir?", root_path, class: "text-xl font-bold text-indigo-600" %>
            </div>
          </div>

          <div class="flex items-center">
            <% if user_signed_in? %>
              <span class="text-gray-600 mr-4"><%= current_user.email %></span>
              <%= button_to "DÃ©connexion", destroy_user_session_path, 
                  method: :delete, 
                  class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
            <% else %>
              <%= link_to "Connexion", new_user_session_path, 
                  class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded mr-2" %>
              <%= link_to "Inscription", new_user_registration_path, 
                  class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
      <% if notice %>
        <div class="notice bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
          <%= notice %>
        </div>
      <% end %>
      
      <% if flash[:error] %>
        <div class="error-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
