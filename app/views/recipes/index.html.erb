<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Toutes les recettes</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe), class: "block transition hover:scale-105", id: "recipe_#{recipe.id}" do %>
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8 h-full hover:shadow-xl transition-all duration-200">
          <h2 class="text-xl font-bold mb-3 text-gray-900">
            <%= recipe.title %>
          </h2>
          
          <div class="flex items-center gap-2 mb-4">
            <%= rating_stars(recipe.average_rating || 0) %>
            <span class="text-sm text-gray-500 ml-2">
              (<%= pluralize(recipe.total_reviews, 'avis') %>)
            </span>
          </div>

          <p class="text-gray-600 mb-4 line-clamp-2">
            <%= recipe.description %>
          </p>

          <div class="flex justify-between text-sm text-gray-500 mt-auto">
            <span class="bg-gray-100 px-3 py-1 rounded-full">
              <%= recipe.difficulty %>
            </span>
            <span class="bg-gray-100 px-3 py-1 rounded-full">
              <%= recipe.preparation_time + recipe.cooking_time %> min
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>