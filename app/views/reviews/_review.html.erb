<div class="bg-white p-4 rounded-lg shadow mb-4">
  <div class="flex justify-between items-start">
    <div>
      <div class="flex items-center gap-2 mb-2">
        <%= rating_stars(review.rating) %>
        <span class="text-sm text-gray-500">
          par <%= review.user.email %> le <%= l(review.created_at, format: :long) %>
        </span>
      </div>
      <p class="text-gray-700"><%= review.comment %></p>
    </div>

    <% if review.user == current_user %>
      <div class="flex gap-2">
        <%= button_to "Modifier",
            edit_recipe_review_path(review.recipe, review),
            method: :get,
            class: "text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2",
            form_class: "inline-block" %>

        <%= button_to "Supprimer",
            recipe_review_path(review.recipe, review),
            method: :delete,
            class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2",
            form_class: "inline-block",
            data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet avis ?" } %>
      </div>
    <% end %>
  </div>
</div> 